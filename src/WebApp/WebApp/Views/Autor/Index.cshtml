@model IEnumerable<WebApp.Models.AutorViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Lista de Autores</h1>

<p>
    <a asp-action="Criar" class="btn btn-primary">Criar Novo</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Linkdin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lattes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Linkdin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lattes)
                </td>
                <td>

                    @Html.ActionLink("Alterar", "Alterar", new { id = item.Id }) -
                    @Html.ActionLink("Detalhar", "Detalhar", new { id = item.Id }) -
                    @Html.ActionLink("Excluir", "Excluir", new {  id=item.Id  })

                </td>
            </tr>
        }
    </tbody>
</table>
